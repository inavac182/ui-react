{
  "name": "@uireact/badge",
  "description": "Badge component from @uireact library",
  "repository": "https://github.com/inavac182/uireact",
  "license": "GNU",
  "version": "1.5.0",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "files": [
    "src"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:publish": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsc",
    "clean": " rm -rf dist node_modules coverage",
    "eslint": "eslint ./src/**/*.{ts,tsx} ./__tests__/**/*.tsx --max-warnings=0",
    "lint": "npm run tsc && npm run eslint && npm run lint:styles",
    "lint:styles": "stylelint ./src/**/*.tsx",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "exports": {
    ".": "./src/index.ts",
    "./*": [
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*/index.ts"
    ]
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "peerDependencies": {
    "@uireact/foundation": "^2.0.1",
    "react": ">= 17 < 19",
    "react-dom": ">= 17 < 19",
    "styled-components": ">= 4 <= 6",
    "tslib": "^2.5.0"
  }
}
