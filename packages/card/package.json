{
  "name": "@uireact/card",
  "description": "Card component from uireact library",
  "repository": "https://github.com/inavac182/uireact",
  "license": "GNU",
  "version": "2.1.4",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:publish": "tsup src/index.ts --format cjs,esm --dts",
    "clean": " rm -rf dist node_modules coverage",
    "dev": "tsc",
    "eslint": "eslint ./src/**/*.{ts,tsx} ./__tests__/**/*.tsx --max-warnings=0",
    "lint:styles": "stylelint ./src/**/*.tsx",
    "lint": "npm run lint:styles && npm run tsc && npm run eslint",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "exports": {
    ".": "./src/index.ts",
    "./*": [
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*/index.ts"
    ]
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@uireact/foundation": "workspace:*",
    "@uireact/icons": "workspace:*",
    "@uireact/text": "workspace:*",
    "jest-environment-jsdom": "^29.7.0",
    "jest-styled-components": "^7.2.0",
    "react": "^18",
    "styled-components": "^6.0.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "@uireact/foundation": "^2.0.1",
    "framer-motion": "^11.0.18",
    "react": ">= 17 < 19",
    "styled-components": ">= 4 <= 6"
  }
}