{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": "main",
      "amend": true,
      "conventionalCommits": true,
      "conventionalGraduate": true,
      "private": false,
      "ignoreChanges": [
        "/apps/**",
        "**/docs/**",
        "**/__tests__/**",
        "*.json"
      ],
      "message": "chore: version bump",
      "yes": true
    }
  },
  "packages": [
    "packages/*"
  ]
}
