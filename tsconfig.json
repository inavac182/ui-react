{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@uireact/*": [
        "./packages/*",
        "./platform/*"
      ]
    },
    "outDir": "dist",
    "baseUrl": "./src",
    "jsx": "react",
    "types": [
      "@testing-library/jest-dom",
      "@testing-library/react",
      "jest-styled-components"
    ]
  },
  "include": [
    "packages/**/src",
    "packages/**/docs",
    "platform/**/src",
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "coverage",
    "packages/**/coverage",
    "packages/**/__tests__/",
    "__tests__",
    "old-repo"
  ],
  "paths": {
    "@uireact/*": [
      "./packages/*",
      "./platform/*"
    ]
  },
}