{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@uireact/*": [
        "./packages/*"
      ]
    },
    "outDir": "dist",
    "baseUrl": "./src",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "coverage",
    "packages/**/coverage"
  ],
  "paths": {
    "@/*": [
      "./src/*"
    ],
    "@uireact/*": [
      "./packages/*"
    ]
  },
}